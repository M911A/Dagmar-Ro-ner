---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LeftLine from '../components/h-line-left.astro';
import RightLine from '../components/h-line-rigth.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
        <div class="container">
            <div class="zeiten">
                <p class="header-serif">Öffnungszeiten</p>
                <p class="header-serif-mobile">Öffnungszeiten</p>
                <div class="time-row">
                    <span>Montag</span>
                    <span>08:00-12:00</span>
                </div>
                <div class="time-row">
                    <span>Dienstag</span>
                    <span>08:00-12:00, 14:00-18:00</span>
                </div>
                <div class="time-row">
                    <span>Mittwoch</span>
                    <span>08:00-12:00</span>
                </div>
                <div class="time-row">
                    <span>Donnerstag</span>
                    <span>08:00-12:00, 14:00-18:00</span>
                </div>
                <div class="time-row">
                    <span>Freitag</span>
                    <span>08:00-12:00</span>
                </div>
            </div>
            <div class="text-container">
                <p class="header-serif">Terminvergabe</p>
                <p class="header-serif-mobile">Terminvergabe</p>
                <p>Die Terminverhabe erfolgt telefonisch unter: 033748 15597<br>Ihr Praxisteam</p>
            </div>
        </div>
		<RightLine />
        <div class="container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2450.9449361523316!2d12.8735949!3d52.098933699999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47a886c6a6501d7f%3A0x9baa4c3cf3e3713a!2sVital%20%26%20Fitness%20Lounge%20-%20Gro%C3%9Fsport39!5e0!3m2!1sde!2sno!4v1721923697829!5m2!1sde!2sno" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
		<LeftLine />

		<Footer />
	</body>
</html>

<style>
    body {
        width: 80%;
        margin-left: 10%;
    }
    .header-serif {
        font-weight: 400;
    }
    .header-serif-mobile {
        display: none;
    }
    .container {
        display: flex;
        flex-direction: row;
        margin-top: 5vh;
    }
    .text-container {
        /* background-color: aqua; */
        width: 50%;
        padding-left: 3%;
        padding-right: 3%;
    }
    .zeiten {
        width: 50%;
        margin-bottom: 2.5%;
        height: 40vh;
        border-radius: 5px;
    }
    .time-row {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-bottom: 2px;
    }
    @media (max-width: 720px) {
        .header-serif {
            display: none;
        }
    }

</style>