---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
    <nav>
        <div class="internal-links links-left">
            <HeaderLink href="/">HOME</HeaderLink>
            <HeaderLink href="/blog">ÜBER MICH</HeaderLink>
        </div>
        <div class="logo">
            <img src="/public/logo.png">
        </div>
        <div class="internal-links links-right">
            <HeaderLink href="/about">ANGEBOT</HeaderLink>
            <HeaderLink href="/about">TERMINE</HeaderLink>
        </div>
        <div class="hamburger">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
    </nav>
    <div class="mobile-menu"><br>
        <HeaderLink href="/">HOME</HeaderLink>
        <HeaderLink href="/blog">ÜBER MICH</HeaderLink>
        <HeaderLink href="/about">ANGEBOT</HeaderLink>
        <HeaderLink href="/about">TERMINE</HeaderLink><br><br><br>
    </div>
</header>

<style>
header {
    margin: 0;
    padding: 0 1em;
    background: white;
    font-weight: 200;
    font-size: 2vh;
}

nav {
    display: flex;
    align-items: center;
    justify-content: center; 
    height: 80px;
}

.internal-links {
    display: flex;
}

.logo {
    display: flex;
    justify-content: center;
    flex: 0 1 auto; /* Flexbox anpassen */
    margin: 0 20px; /* Abstand zwischen Logo und Links */
}

.logo img {
    width: 80px;
}

nav a {
    position: relative;
    padding: 0.5em;
    color: var(--black);
    text-decoration: none;
    display: inline-block;
    line-height: 1;
}

nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
    color: var(--accent); /* Add this line to change color */
}

nav a::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background-color: var(--accent);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.5s ease;
}

nav a.active::before,
nav a:hover::before {
    transform: scaleX(1);
    transform-origin: bottom left;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger .bar {
    height: 3px;
    width: 30px;
    background-color: var(--accent);
    margin: 4px 0;
    transition: 0.4s;
    border-radius: 10px;
}

.hamburger.open .bar:nth-child(1) {
    transform: rotate(45deg);
    top: 8px;
    position: relative;
}

.hamburger.open .bar:nth-child(2) {
    opacity: 0;
}

.hamburger.open .bar:nth-child(3) {
    transform: rotate(-45deg);
    top: -14px;
    /* left: -4px; */
    position: relative;
}

.mobile-menu {
    display: none;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 80px; 
    left: 0;
    width: 100%;
    background-color: #FFFFFF;
    z-index: 1;
    color: var(--black);
    font-size: 20px;
}

@keyframes slideDown {
    from {
        transform: translateY(-20px); 
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes slideIn {
    from {
        transform: translateX(0px);
        opacity: 0;
    }
    to {
        transform: translateX(50px);
        opacity: 1;
    }
}

@media (max-width: 720px) {
    .internal-links {
        display: none;
    }
    nav {
        display: flex;
        justify-content: space-between;
        /* padding-left: 5%; */
        padding-right: 5%;
    }
    .hamburger {
        margin-right: 0px;
        display: flex;
        /* order: 2; */
        /* margin-left: 80%; */
    }
    .logo {
        margin-left: 0px;
        /* order: 1; */
        /* margin-left: 10%; */
    }
    .mobile-menu a {
        color: black;
    }
    .mobile-menu a.active {
        color: var(--accent) !important; /* Ensure active link color */
        text-decoration: none; /* Remove underline */
    }
}

.mobile-menu.active {
    display: flex;
    animation: slideDown 0.5s ease forwards;
}

</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const hamburger = document.querySelector('.hamburger');
        const mobileMenu = document.querySelector('.mobile-menu');
        hamburger.addEventListener('click', () => {
            mobileMenu.classList.toggle('active');
            hamburger.classList.toggle('open');
        });
    });
</script>
