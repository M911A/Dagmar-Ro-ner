<div class="container">
    <div class="left">
        <p class="header-serif">Inkontinenz - Emsella</p>
        <p class="header-serif-mobile">Inkontinenz - Emsella</p>
        <p>Donaldson Plastic Surgery and Donaldson Health address the complex issues underlying appearance and wellness. We provide one-on-one attention to make sure we understand each other. </p>
    </div>
    <div class="right-emsella">
        <img alt="Bild Emsella" src="/emsella.webp" alt="Emsella">
    </div>
</div>

<style>
    .container {
        width: 90%;
        margin-left: 5%;
        display: flex;
        flex-direction: row;
    }
    .left {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        width: 40%;
        margin-left: 5%;
        margin-right: 5%;
    }
    .right-emsella {
        width: 60%;
        opacity: 0;
        transition: opacity 1.5s ease;
    }
    .header-serif {
        font-weight: 200 !important;
    }
    .header-serif-mobile {
        display: none;
    }
    @media (max-width: 720px){
        .container {
            flex-direction: column;
        }
        .left {
            width: 90%;
        }
        .header-serif {
            display: none;
        }
        .header-serif-mobile {
            display: contents;
            font-weight: 600 !important;
        }
        .right-emsella {
            margin-top: 2vh;
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const options = {
            root: null,
            rootMargin: '0px',
            threshold: 0.3
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-slide-in-right');
                    observer.unobserve(entry.target);
                }
            });
        }, options);

        const target = document.querySelector('.right-emsella');
        if (target) {
            observer.observe(target);
        }
    });
</script>
